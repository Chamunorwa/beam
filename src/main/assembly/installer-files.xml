<!-- Creates a directory target/installer-files which is used by the IA installer. -->
<!-- Its intend is to remove the ${pom.artifactId}-${pom.version} string out of the directory name. -->
<assembly>
    <id>installer-files</id>

    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>dir</format>
    </formats>

    <fileSets>
        <fileSet>
            <outputDirectory>../beam-installer-files</outputDirectory>
            <directory>target/${pom.artifactId}-${pom.version}-bin.dir</directory>
        </fileSet>
    </fileSets>
</assembly>